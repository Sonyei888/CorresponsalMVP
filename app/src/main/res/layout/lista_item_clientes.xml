<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#D5FFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nombre_cliente_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Nombre Cliente"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cuenta_cliente_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="NÂ° cuenta cliente"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cedula_cliente_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cedula cliente"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/saldo_cliente_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:background="#A3E3FF"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Saldo Cliente"
            android:textAlignment="textEnd"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>